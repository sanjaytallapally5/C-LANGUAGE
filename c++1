#include <iostream>
using namespace std;

class student
{
private:
    float average;
    float percentage;

public:
    void avg(int m1, int m2, int m3)
    {
        average = (m1 + m2 + m3) / 3.0;
        cout << "AVERAGE = " << average << endl;
    }

    void per(int m1, int m2, int m3)
    {
        percentage = ((m1 + m2 + m3) / 300.0) * 100;
        cout << "PERCENTAGE = " << percentage << endl;
    }
};

int main()
{
    student s1,s2,s3; 
	cout<<"student 1"; 
    s1.avg(20,70,80);
    s1.per(20,70,80);
    cout<<"student 2";  
    s2.avg(60,90,100);
    s2.per(60,90,100);
    cout<<"student 3";
    s3.avg(63,94,100);
    s3.per(63,94,100);

    return 0;
}
